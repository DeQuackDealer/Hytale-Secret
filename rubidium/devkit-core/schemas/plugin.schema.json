{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rubidium Plugin Manifest",
  "description": "Schema for plugin.toml manifest files",
  "type": "object",
  "required": ["plugin"],
  "properties": {
    "plugin": {
      "type": "object",
      "required": ["id", "name", "version", "api_version"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "Unique plugin identifier (lowercase, hyphens allowed)"
        },
        "name": {
          "type": "string",
          "description": "Human-readable plugin name"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$",
          "description": "Semantic version (e.g., 1.0.0, 1.0.0-beta)"
        },
        "author": {
          "type": "string",
          "description": "Plugin author name"
        },
        "description": {
          "type": "string",
          "description": "Brief plugin description"
        },
        "api_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Rubidium API version this plugin targets"
        },
        "main": {
          "type": "string",
          "description": "Fully qualified main class name"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Plugin website URL"
        },
        "repository": {
          "type": "string",
          "format": "uri",
          "description": "Source code repository URL"
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Dependency plugin ID"
          },
          "version": {
            "type": "string",
            "description": "Version requirement (e.g., >=1.0.0, ^1.0.0)"
          },
          "required": {
            "type": "boolean",
            "default": true,
            "description": "Whether this dependency is required"
          }
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Optional features this plugin provides",
      "properties": {
        "commands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Commands registered by this plugin"
        },
        "permissions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "default": { 
                "type": "string",
                "enum": ["op", "not_op", "true", "false"]
              }
            }
          }
        }
      }
    }
  }
}
